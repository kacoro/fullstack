{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "paths": {
      "libs/db": [
        "libs/db/src"
      ],
      "libs/db/*": [
        "libs/db/src/*"
      ],
      "@app/common": [
        "libs/common/src"
      ],
      "@app/common/*": [
        "libs/common/src/*"
      ],
      "@app/redis": [
        "libs/redis/src"
      ],
      "@app/redis/*": [
        "libs/redis/src/*"
      ],
      "@app/rs": [
        "libs/rs/src"
      ],
      "@app/rs/*": [
        "libs/rs/src/*"
      ],
      "@app/rdb": [
        "libs/rdb/src"
      ],
      "@app/rdb/*": [
        "libs/rdb/src/*"
      ]
    }
  },
  "exclude": [
    "node_modules",
    "dist"
  ]
}